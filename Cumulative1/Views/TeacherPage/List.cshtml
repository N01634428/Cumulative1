@model IEnumerable<Cumulative1.Models.Teacher>

<h2>Teachers List</h2>

<!-- Check if there are no teachers -->
@if (Model == null || !Model.Any())
{
    <p>No teachers available.</p>
}
else
{
    <!-- Display each teacher's details with links to Show, Edit, and Delete -->
    <table class="table">
        <thead>
            <tr>
                <th>Teacher ID</th>
                <th>Full Name</th>
                <th>Salary</th>
                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.TeacherId</td>
                    <td>@teacher.TeacherFName @teacher.TeacherLName</td>
                    <td>@teacher.Salary</td>
                    
                    <td>
                        <a href="@Url.Action("Show", "TeacherPage", new { id = teacher.TeacherId })">Details</a> |
                        <a href="@Url.Action("Edit", "TeacherPage", new { id = teacher.TeacherId })">Edit</a> |
                        <a href="@Url.Action("DeleteConfirm", "TeacherPage", new { id = teacher.TeacherId })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Link to add a new teacher -->
<a href="@Url.Action("Create", "TeacherPage")" class="btn btn-primary">Add New Teacher</a>
