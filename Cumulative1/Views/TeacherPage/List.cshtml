@model IEnumerable<Cumulative1.Models.Teacher>

<h2>Teachers List</h2>

@if (Model == null || !Model.Any())
{
    <p>No teachers available.</p>
}
else
{
    foreach (var teacher in Model)
    {
        <div>
            <a href="@Url.Action("Show", "TeacherPage", new { id = teacher.TeacherId })">
                @teacher.TeacherId - @teacher.TeacherFName @teacher.TeacherLName
            </a>
            |
            <a href="@Url.Action("DeleteConfirm", "TeacherPage", new { id = teacher.TeacherId })">Delete</a>
        </div>
    }
}

<a href="@Url.Action("Add", "TeacherPage")">Add New Teacher</a>
